---
import data from '../../manfred.json';
const skills = data.knowledge.hardSkills.map(h => h.skill.name);
---
<section id="skills" class="py-16">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold mb-8">Skills</h2>
    <ul class="flex flex-wrap gap-4">
      {skills.map(skill => (
        <li class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full">{skill}</li>
      ))}
    </ul>
  </div>
</section>
