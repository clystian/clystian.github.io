---
import data from '../../manfred.json';
const studies = data.knowledge.studies;
const formatRange = (start, end) => {
  const startStr = new Date(start).toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
  const endStr = end ? new Date(end).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) : 'Present';
  return `${startStr} - ${endStr}`;
};
---
<section id="education" class="py-16">
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold mb-8">Education</h2>
    {studies.map(study => (
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h3 class="text-lg font-semibold">{study.institution.name}</h3>
        <span class="block text-sm text-gray-500 mb-2">{formatRange(study.startDate, study.finishDate)}</span>
        <h4 class="font-medium mb-2">{study.name}</h4>
      </div>
    ))}
  </div>
</section>
